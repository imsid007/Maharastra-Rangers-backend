# -----------------------------------------------------------------------------
# Development Environment Variables - EXAMPLE
# Copy to terraform.tfvars and fill in your values
# -----------------------------------------------------------------------------

# General Configuration
aws_region   = "ap-south-1"
project_name = "maharastra-rangers"

# VPC Configuration (different CIDR range from prod)
vpc_cidr             = "10.1.0.0/16"
availability_zones   = ["ap-south-1a", "ap-south-1b"]
public_subnet_cidrs  = ["10.1.1.0/24", "10.1.2.0/24"]
private_subnet_cidrs = ["10.1.10.0/24", "10.1.11.0/24"]

# EC2 Configuration
instance_type = "t3.micro"
app_port      = 3000

# ALB Configuration
health_check_path = "/health"

# GitHub Configuration
github_owner  = "imsid007"
github_repo   = "Maharastra-Rangers-backend"
github_branch = "main"

# Application Secrets (NEVER commit real values!)
app_secrets = {
  MONGODB_URI = "mongodb+srv://username:password@cluster.mongodb.net/dev_database"
  JWT_SECRET  = "your-dev-jwt-secret-key"
  NODE_ENV    = "development"
}
